<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.control2.MainActivity"
    android:background="@drawable/batman5">


    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="16dp"
        android:onClick="left"
        android:rotation="270"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow"
        />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="216dp"
        android:onClick="backward"
        android:rotation="180"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow"
       />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:onClick="forward"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageButton3"
        app:srcCompat="@drawable/arrow"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="199dp"
        />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_marginBottom="16dp"
        android:onClick="right"
        android:rotation="90"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/arrow"
        />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="stop"
        android:rotation="90"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton3"
        app:layout_constraintEnd_toEndOf="@+id/imageButton2"
        app:layout_constraintStart_toStartOf="@+id/imageButton2"
        app:layout_constraintTop_toTopOf="@+id/imageButton3"
        app:srcCompat="@drawable/stop2"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="199dp" />

    <Button
        android:id="@+id/low"
        android:layout_width="67dp"
        android:layout_height="0dp"
        android:text="L"
        android:rotation="90"
        android:onClick="low"
        android:background="#1409e8"
        tools:layout_editor_absoluteX="301dp"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintTop_toTopOf="@+id/imageButton2"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/medium"
        android:layout_width="79dp"
        android:layout_height="0dp"
        android:text="M"
        android:rotation="90"
        android:onClick="medium"
        android:background="#cbef00"
        tools:layout_editor_absoluteX="301dp"
        tools:layout_editor_absoluteY="420dp"
        app:layout_constraintTop_toTopOf="@+id/imageButton5"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton5"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/high"
        android:layout_width="89dp"
        android:layout_height="69dp"
        android:text="H"
        android:rotation="90"
        android:onClick="high"
        android:background="#e80909"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="425dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="17dp" />

    <Button
        android:id="@+id/no"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:rotation="90"
        android:onClick="no"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintEnd_toEndOf="@+id/imageButton3"
        app:layout_constraintTop_toTopOf="@+id/imageButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="6dp"
        android:background="#00efcb"/>

</android.support.constraint.ConstraintLayout>